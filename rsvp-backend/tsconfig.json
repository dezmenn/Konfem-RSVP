{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "../shared/src/types": ["../shared/src/types/index.ts"],
      "../shared/src/types/*": ["../shared/src/types/*"]
    }
  },
  "include": ["src/**/*", "../shared/src/types/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}